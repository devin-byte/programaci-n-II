<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Examen_Mvvm.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Examen_Mvvm.ViewModels">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="CÃ¡lculo de Descuento"
                   FontSize="22"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <!-- Entradas -->
            <Entry Placeholder="Producto 1"
                   Keyboard="Numeric"
                   Text="{Binding Producto1}" />

            <Entry Placeholder="Producto 2"
                   Keyboard="Numeric"
                   Text="{Binding Producto2}" />

            <Entry Placeholder="Producto 3"
                   Keyboard="Numeric"
                   Text="{Binding Producto3}" />

            <!-- Resultados -->
            <Entry Placeholder="Subtotal"
                   IsReadOnly="True"
                   Text="{Binding Subtotal}" />

            <Entry Placeholder="Descuento"
                   IsReadOnly="True"
                   Text="{Binding Descuento}" />

            <Entry Placeholder="Total a Pagar"
                   IsReadOnly="True"
                   Text="{Binding TotalPagar}" />

            <!-- Botones -->
            <Button Text="Calcular"
                    Command="{Binding CalcularCommand}"
                    BackgroundColor="Green"
                    TextColor="White"/>

            <Button Text="Limpiar"
                    Command="{Binding LimpiarCommand}"
                    BackgroundColor="Gray"
                    TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
